@model EnqueteWeb.Models.Resposta

<!DOCTYPE html>
<html lang = "pt-br">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-widtd, initial-scale=1.0"> 
        <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
        <link rel="stylesheet" href="/css/estilo.css">
        <title>Enquete ASPNET :: Resposta</title>
    </head>
        
    <body>
        <div class = "container">
            <div class="row">
                <div class="offset-3 col-6">
                    <h1>Enquete produzida para estudos com AspNetCore MVC usando VSCODE</h1>
                    <h2>Você tem facilidade com a plataforma .NET?</h2>
                    <h4>Preencha os campos e marque a sua resposta.</h4>
                    <div asp-validation-summary="All"></div>
                    <form method="POST">
                        <div class = "form-group">
                            <!-- <label for="txtNome">Seu Nome:</label><br> codigo anterior-->
                            <!-- <input type="text" name="Nome" id="txtNome"> -->
                            <label asp-for="Nome">Seu Nome:</label><br>
                            <input asp-for="Nome" class = "form-control">
                                
                        </div>
                        <div class="form-group">
                            <!-- <label for="txtEmail">Seu E-mail:</label><br> codigo antetrior-->
                            <!-- <input type="text" name="Email" id="txtEmail"> codigo anterior -->
                            <label asp-for="Email">Seu E-mail:</label><br>
                            <input asp-for="Email" class="form-control">
                        </div>
                        <div>
                            Resposta:
                            <div>
                                <input type="radio" asp-for="Sim" id="rdSim" value="true" class="form-check-input">
                                <label for="rdSim" class="form-check-label">Sim</label>
                            </div>
                            <div>
                                <input type="radio" asp-for="Sim" id="rdNao" value="false" class="form-check-input">
                                <label for="rdNao" class="form-check-label">Não</label>
                            </div>
                            
                        </div>
                        <input type="submit" value="Enviar Resposta">
                    </form>
                </div>
            </div>
            
        </div>
        
    </body>
</html>